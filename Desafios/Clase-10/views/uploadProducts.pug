html
    head
        title= 'Form Products'
        link(rel="stylesheet" href="styles.css")
        link(href=href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    body
        div.container
            h1= 'Form Products'
            form(action="/products", method="post") 
                label(for='name') Nombre de Producto
                input#name.form-control(name='name' type='text' placeholder='Nombre de Producto' required)
                label(for='price') Precio
                input#price.form-control(name='price' type='number' placeholder='Precio' required)
                label(for='thumbnail') URL de Imagen
                input#thumbnail.form-control(name='thumbnail' type='text' placeholder='URL de Imagen' required)
                button.btn.btn-primary.d-flex.mx-auto.mt-2(type='submit') Enviar
        div.container
            a.btn.btn-danger(href="/products/show") Ver todos los productos

